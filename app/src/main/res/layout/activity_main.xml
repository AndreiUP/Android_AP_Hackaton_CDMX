<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_oval_blue_strong"
                android:layout_marginBottom="7.5dp"
                android:textSize="100px"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:text="REGISTRO" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre(s)" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:ems="10"
                android:background="@drawable/background_oval_blue"
                android:hint="Nombre"
                android:layout_height="40dp"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/background_oval_blue"
                android:inputType="textPersonName"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:hint="Apellido Paterno" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido Materno" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/background_oval_blue"
                android:inputType="textPersonName"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:hint="Apellido Materno" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_oval_blue"
                android:entries="@array/gender"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/background_oval_blue"
                android:hint="dd/mm/AAAA"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celular" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="5555555555"
                android:background="@drawable/background_oval_blue"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_oval_blue"
                android:ems="10"
                android:hint="ejemplo@correo.com"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:background="@drawable/background_oval_blue"
                android:inputType="textPersonName"
                android:layout_marginBottom="7.5dp"
                android:padding="7.5dp"
                android:hint="Usuario" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="**********"
                android:background="@drawable/background_oval_blue"
                android:layout_marginBottom="15dp"
                android:padding="7.5dp"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/background_oval_red"
                    android:layout_margin="10dp"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/background_oval_blue_strong"
                    android:layout_margin="10dp"
                    android:text="Registrar" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>